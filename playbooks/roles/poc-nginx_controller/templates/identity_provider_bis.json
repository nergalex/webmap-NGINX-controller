{
  "metadata": {
    "name": "idp_bis_{{item.name | lower }}_{{item.identityProviders.0 | lower }}",
    "displayName": "{{ item.identityProviders.0 }} for {{item.name}} BIS",
    "description": "Generated by CMP - oAuth Authorization Server"
  },
  "desiredState": {
    "environmentRefs": [
      {
      "ref": "/services/environments/env_{{extra_nginx_controller_environment | lower}}"
      }
    ],
    "identityProvider": {
      "type": "JWT",
      "jwkFile": {
        "type": "REMOTE_FILE",
        "uri": "{{ extra_idp[item.identityProviders.0].jwks_uri }}",
        "cacheExpire": "24h"
      }
    }
  }
}