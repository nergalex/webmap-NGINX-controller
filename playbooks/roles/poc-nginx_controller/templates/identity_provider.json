{
  "metadata": {
    "name": "idp_{{ item.name | lower }}",
    "displayName": "oAuth Authorization Server {{ item.name | lower }}",
    "description": "Generated by CMP"
  },
  "desiredState": {
    "environmentRefs": [
      {
      "ref": "/services/environments/env_{{extra_nginx_controller_environment | lower}}"
      }
    ],
    "identityProvider": {
      "type": "JWT",
      "jwkFile": {
        "type": "REMOTE_FILE",
        "uri": "{{ item.jwks_uri | lower }}",
        "cacheExpire": "24h"
      }
    }
  }
}