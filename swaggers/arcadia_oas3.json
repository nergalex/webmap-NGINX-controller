                "trans_value": "312",
                "qty": "16",
                "company": "MSFT",
                "action": "buy",
                "stock_price": "198"
              }
            }
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "trans_value",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "qty",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "company",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "action",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "stock_price",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "name": "Microsoft",
                  "qty": "16",
                  "amount": "312",
                  "transid": "855415223"
                }
              }
            }
          }
        }
      }
    },
