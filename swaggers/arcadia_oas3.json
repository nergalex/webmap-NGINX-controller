{
  "openapi": "3.0.0",
  "info": {
    "description": "Arcadia OpenAPI",
    "title": "API Arcadia Finance",
    "version": "1.0.0-oas3"
  },
  "paths": {
    "/api/rest/execute_money_transfer.php": {
      "post": {
        "summary": "Transfer money to a friend",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "amount": "92",
                "account": "2075894",
                "currency": "GBP",
                "friend": "Vincent"
              }
            }
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "amount",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "account",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "currency",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "friend",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "example": {
                  "name": "Vincent",
                  "status": "success",
                  "currency": "GBP",
                  "transid": "524569855",
                  "msg": "The money transfer has been successfully completed"
                }
              }
            }
          }
        }
      }
    },
    "/trading/rest/buy_stocks.php": {
